<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.exercise.ExerciseFragment">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="눈운동"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_ex_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="오늘 한 개의 눈 운동을 하셨네요."
        android:textColor="#9b9b9b"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_ex_02"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/button_ex_01"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <Button
        android:id="@+id/button_ex_01"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_ex_01"
        app:layout_constraintEnd_toStartOf="@+id/button_ex_02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ex_number" />

    <Button
        android:id="@+id/button_ex_03"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_ex_03"
        app:layout_constraintStart_toStartOf="@+id/button_ex_01"
        app:layout_constraintTop_toBottomOf="@+id/button_ex_01" />

    <Button
        android:id="@+id/button_ex_04"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:background="@drawable/button_ex_04"
        app:layout_constraintStart_toStartOf="@+id/button_ex_02"
        app:layout_constraintTop_toTopOf="@+id/button_ex_03" />

    <Button
        android:id="@+id/button_ex_02"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:background="@drawable/button_ex_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_ex_01"
        app:layout_constraintTop_toTopOf="@+id/button_ex_01" />

    <Button
        android:id="@+id/button_ex_history"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ex_history"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/textView_ex_date"
        app:layout_constraintStart_toEndOf="@+id/textView_ex_date"
        app:layout_constraintTop_toTopOf="@+id/textView_ex_date" />

    <TextView
        android:id="@+id/textView_ex_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="더 다양한 눈운동이 추가될 예정입니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ex_03" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:text="MAGAZINE"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/magazien_ex_1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

</androidx.constraintlayout.widget.ConstraintLayout>