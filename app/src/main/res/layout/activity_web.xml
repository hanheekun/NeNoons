<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/button_arrow_close"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/webview_close"
        app:layout_constraintBottom_toBottomOf="@+id/button_arrow_close_background"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_close_background"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_close_background"
        app:layout_constraintTop_toTopOf="@+id/button_arrow_close_background" />

    <Button
        android:id="@+id/button_arrow_back"
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:background="@drawable/webview_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_arrow_back_background"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_back_background"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_back_background"
        app:layout_constraintTop_toTopOf="@+id/button_arrow_back_background" />

    <Button
        android:id="@+id/button_arrow_close_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_arrow_back_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

    </WebView>

</androidx.constraintlayout.widget.ConstraintLayout>