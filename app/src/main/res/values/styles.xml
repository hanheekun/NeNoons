<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TestTitle" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#131340</item>
    </style>

    <style name="TestSampleText" >
        <item name="android:text">@string/test_sample</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TestGuide" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#5e7292</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TestInstruction" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
